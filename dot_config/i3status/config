general {
    output_format = "i3bar"
    colors = true
    
}

order += "disk /"
order += "wireless wlan0"
order += "ethernet enp2s0"
order += "battery 1"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "memory"
order += "volume master"
order += "time"


disk "/" {
        format = "%free"
}

wireless wlan0 {
        format_up = "W: (%quality at %essid, %bitrate / %frequency) %ip"
        format_down = "W: down"
}
ethernet enp2s0 {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}
battery 1 {
        format = "%status %percentage %consumption"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT1/uevent"
        low_threshold = 20
}
cpu_temperature 0 {
        format = "T: %degrees Â°C"
        max_threshold = 50
        path = "/sys/class/thermal/thermal_zone0/temp"
}

cpu_usage {
  format = "CPU: %usage"
  max_threshold = 75
  degraded_threshold = 50
}

